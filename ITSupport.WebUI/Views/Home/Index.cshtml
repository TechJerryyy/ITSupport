@{
    ViewBag.Title = "Home Page";
}
<div class="container" style="margin-top:20px;">
    <h1><strong>Dashboard</strong></h1><br />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />
    <div class="container">
        <div class="row">
            <h6 style="color:gray"><b>Tickets by Priority</b></h6>
            <div class="col-md-3">
                <div class="card-counter primary">
                    <i class="fa fa-ticket"></i>
                    <span class="count-numbers">@ViewBag.TotalTicket</span>
                    <span class="count-name">Total Tickets&nbsp;<a href="/Ticket/Index" class="glyphicon glyphicon-arrow-right" style="text-align:end; background: none; border: none; color:azure"></a></span>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card-counter warning">
                    <i class="glyphicon glyphicon-copy"></i>
                    <span class="count-numbers">@ViewBag.New</span>
                    <span class="count-name">New</span>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card-counter success">
                    <i class="glyphicon glyphicon-hourglass"></i>
                    <span class="count-numbers">@ViewBag.Pending</span>
                    <span class="count-name">Pending</span>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card-counter info">
                    <i class="glyphicon glyphicon-check"></i>
                    <span class="count-numbers">@ViewBag.Assigned</span>
                    <span class="count-name">Assigned</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8">

            </div>
            <div class="col-lg-4">
            </div>
        </div>
    </div>
</div>

<style>
    .card-counter {
        box-shadow: 2px 2px 10px #DADADA;
        margin: 5px;
        padding: 20px 10px;
        background-color: #fff;
        height: 100px;
        border-radius: 5px;
        transition: .3s linear all;
    }
    .a:hover{
        color:aliceblue;
        text-decoration:underline;
    }

        .card-counter:hover i {
            box-shadow: 4px 4px 20px #DADADA;
            transition: .3s linear all;
            font-size: 80px;
            transition: 1s;
            -webkit-transition: 1s;
        }

        .card-counter.primary {
            background-color: #007bff;
            color: #FFF;
        }

        .card-counter.danger {
            background-color: #ef5350;
            color: #FFF;
        }

        .card-counter.success {
            background-color: #66bb6a;
            color: #FFF;
        }

        .card-counter.warning {
            background-color: #ffa700;
            color: #FFF;
        }

        .card-counter.info {
            background-color: #26c6da;
            color: #FFF;
        }

        .card-counter i {
            font-size: 5em;
            opacity: 0.3;
        }

        .card-counter .count-numbers {
            position: absolute;
            right: 35px;
            top: 20px;
            font-size: 32px;
            display: block;
        }

        .card-counter .count-name {
            position: absolute;
            right: 35px;
            top: 65px;
            font-style: italic;
            text-transform: capitalize;
            /*opacity: 0.5;*/
            opacity: 0.8;
            display: block;
            font-size: 18px;
        }
</style>