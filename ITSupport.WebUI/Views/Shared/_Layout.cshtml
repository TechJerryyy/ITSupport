<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> Systems </title>
    <link rel="icon" type="image/x-icon" href="~/Images/aakash-informatics-squareLogo-1615467716612.png">
    <link rel="stylesheet" href="~/css/style.css">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Kendo")
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="mainDiv">
        <!-- Header -->
        <div class="header">
            <div class="container">
                <div class="align-center align-between">
                    <div class="align-center">
                        <div class="logoDiv"> <a href="#"> <img src="~/Images/logo.svg" alt="CRB Logo"> </a> </div>

                        <div class="menuDiv">
                            <ul class="align-center">
                                <li> @Html.ActionLink("Home", "Index", "Home") </li>
                                <li> <a href="#"> Ticket </a> </li>
                                <li class="active">@Html.ActionLink("Systems", "Index", "Admin")</li>
                            </ul>
                        </div>
                    </div>

                    <div class="userInfo">
                        <div class="align-center">
                            <div class="userProfile">

                            </div>
                            <div class="userName align-center">
                                @if (Session["UserId"] != null)
                                {
                                    <span>@Session["UserName"]</span>
                                    <i> <img src="~/Images/down-arrow.svg" alt="Dropdown Icon"> </i>
                                    <div class="userInfoDiv">
                                        <div class="userInfoBox">
                                            <a href="#">Profile</a>
                                            <a href="#">Settings</a>
                                            @Html.ActionLink("Logout", "Logout", "Account")
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
        <!-- END Header -->
    </div>
    <div class="tabContentDetails">
        @RenderBody()
    </div>
</body>
</html>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<link rel="stylesheet" href="https://kendo.cdn.telerik.com/2022.2.510/styles/kendo.common.min.css" />
<link rel="stylesheet" href="https://kendo.cdn.telerik.com/themes/6.2.0/default/default-main.css" />
@Scripts.Render("~/bundles/bootstrap")