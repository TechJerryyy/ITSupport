<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ITSTMSystem @*@ViewBag.title*@</title>
    <link rel="icon" type="image/x-icon" href="~/Images/aakash-informatics-squareLogo-1615467716612.png">

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Kendo")

    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" style="align-content:center">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ITSTMSystem", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["UserId"] != null)
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Admin", "Index", "Admin")</li>

                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                        <li style="margin-right:3px"><a>Hello - @Session["UserName"]</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer class="bottom navbar-fixed-bottom">
            <p>&copy; @DateTime.Now.Year ITSTMSystem</p>
        </footer>
    </div>


</body>
</html>

<link rel="stylesheet" href="https://kendo.cdn.telerik.com/2022.2.510/styles/kendo.common.min.css" />
<link rel="stylesheet" href="https://kendo.cdn.telerik.com/themes/6.2.0/default/default-main.css" />
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/bootstrap")