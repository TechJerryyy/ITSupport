@model ITSupport.Core.ViewModels.RoleViewModel
@{
    ViewBag.Title = "Edit";
}
<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> Systems </title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <!----- Form ---->
        <div class="mainDiv">
            <!----- Form ---->
            <div class="formDiv">
                <div class="topTitleHead pb20">
                    <h1>Edit Role</h1>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "errorMsg" })
                <div class="text-danger" style="color:red">
                    @ViewBag.Message
                </div>
                <div class="formSection">
                    <div class="inputBox">
                        @Html.LabelFor(model => model.Name)
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @placeholder = "Enter Name" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "errorMsg" })
                    </div>
                    <div class="inputBox">
                        @Html.LabelFor(model => model.Code)
                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", @style = "text-transform:uppercase", @placeholder = "Enter Code" } })
                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "errorMsg" })
                    </div>
                    @Html.HiddenFor(model => model.Id)
                </div>
                <div class="inputBox">
                    <button type="submit" class="btnDiv">Save</button>
                </div>

            </div>
        </div>
    }
    <button id="backToList" onclick="history.back()">Back to List</button>
    </body>
</html>