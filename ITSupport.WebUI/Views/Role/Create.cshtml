@model ITSupport.Core.ViewModels.RoleViewModel

@{
    ViewBag.Title = "Create";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!----- Form ---->
    <div class="mainDiv">
        <div class="formDiv">
            <div class="topTitleHead pb20">
                <h1> Add New Role</h1>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "errorMsg" })
            <div class="text-danger" style="color:red">
                @ViewBag.Message
            </div>
            <div class="formSection">
                <div class="inputBox">
                    <label class="form-label">Name<strong style="color:red;font-size:20px">*</strong></label>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @placeholder = "Enter Name" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "errorMsg" })
                </div>
                <div class="inputBox">
                    <label class="form-label">Code<strong style="color:red;font-size:20px">*</strong></label>
                    @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", @style = "text-transform:uppercase", @placeholder = "Enter Code" } })
                    @Html.ValidationMessageFor(model => model.Code, "", new { @class = "errorMsg" })
                </div>
            </div>
            <div class="inputBox">
                <button type="submit" class="btnDiv">Create</button>
            </div>
            @*<a href="/Admin/Index/">Back to List</a>*@
            @*<button id="backToList" onclick="javascript: history.go(-1)" value="(TempData["PageSelected"] = "RoleManagement")">Back to List</button>*@
            @Html.ActionLink("Back to List", "Index", "Admin", null, new { @RoleManagement = @TempData["RoleManagement"] })
        </div>
    </div>
}
