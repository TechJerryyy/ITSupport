@model ITSupport.Core.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = null;
    <link rel="icon" type="image/x-icon" href="~/Images/aakash-informatics-squareLogo-1615467716612.png">
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!DOCTYPE html>
    <html lang="en-us">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>ITSTM Login</title>
        <link rel="stylesheet" href="~/css/login.css">

    </head>
    <body>
        <div class="loginDiv">
            <div class="loginBox">
                <div class="loginLogo">
                    <img src="~/Images/logo.svg" alt="ITSTM Logo">
                </div>
                @Html.ValidationSummary(true, "", new { @style = "color: red" })
                <div class="formSection">
                    <div class="inputBox">
                        @Html.LabelFor(model => model.Email)
                        @Html.EditorFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "errorMsg" })
                    </div>
                    <div class="inputBox">

                        @Html.LabelFor(model => model.Password)
                        @Html.EditorFor(model => model.Password)
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "errorMsg" })
                    </div>
                    <!-- <div class="inputBox forgotPsw">
                        <a href="#">Forgot Password</a>
                    </div> -->
                    <div class="inputBox btnInput">
                        <input type="submit" value="Login" class="loginBtn" />
                    </div>
                </div>

            </div>
        </div>
    </body>
</html>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
